<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	
	<!-- 登录管理Action类 -->
	<bean id="logonAction" class="com.fintech.logon.action.LogonAction">
		<property name="logonServiceImp" ref="logonServiceImp"></property>    
	</bean>
	
	<!-- 用户信息管理Action类 -->
	<bean id="userAction" class="com.fintech.user.action.UserAction">
		<property name="userServiceImp" ref="userServiceImp"></property>    
	</bean>
</beans>